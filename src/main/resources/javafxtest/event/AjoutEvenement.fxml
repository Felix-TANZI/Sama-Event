                            <children>
                                <TableView prefHeight="150.0" prefWidth="550.0">
                                    <columns>
                                        <TableColumn prefWidth="150.0" text="ID" />
                                        <TableColumn prefWidth="200.0" text="Nom" />
                                        <TableColumn prefWidth="200.0" text="Spécialité" />
                                    </columns>
                                </TableView>
                                <VBox spacing="5.0">
                                    <children>
                                        <Button mnemonicParsing="false" prefWidth="100.0" text="Ajouter" />
                                        <Button mnemonicParsing="false" prefWidth="100.0" text="Modifier" />
                                        <Button mnemonicParsing="false" prefWidth="100.0" text="Supprimer" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
