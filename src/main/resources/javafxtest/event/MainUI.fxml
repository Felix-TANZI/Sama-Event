<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="javafxtest.event.MainController"
            prefHeight="600" prefWidth="800"
            style="-fx-background-color: #f0f2f5;">

    <!-- En-tête (Header) -->
    <top>
        <HBox style="-fx-background-color: #3b5998; -fx-padding: 10px; -fx-spacing: 10px;" alignment="CENTER_LEFT">
            <Label text="Système de Gestion d'Événements" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18"/>
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Connexion" style="-fx-background-color: white; -fx-text-fill: #3b5998;"/>
        </HBox>
    </top>

    <!-- Menu latéral (Sidebar) -->
    <left>
        <VBox spacing="5" style="-fx-background-color: #f0f2f5; -fx-padding: 10px;">
            <Button text="Tableau de bord" prefWidth="150" style="-fx-background-color: #dfe3ee;"/>
            <Button text="Événements" prefWidth="150" style="-fx-background-color: #3b5998; -fx-text-fill: white;"/>
            <Button text="Participants" prefWidth="150" style="-fx-background-color: #dfe3ee;"/>
            <Button text="Organisateurs" prefWidth="150" style="-fx-background-color: #dfe3ee;"/>
            <Button text="Notifications" prefWidth="150" style="-fx-background-color: #dfe3ee;"/>
            <Button text="Rapports" prefWidth="150" style="-fx-background-color: #dfe3ee;"/>
        </VBox>
    </left>

