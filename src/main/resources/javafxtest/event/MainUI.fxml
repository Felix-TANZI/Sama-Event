    <center>
        <StackPane>
            <!-- Contenu de base -->
            <VBox style="-fx-background-color: white; -fx-padding: 15px; -fx-spacing: 10px;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Gestion des Événements" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="+ Nouvel Événement" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                </HBox>
                <Label text="Liste des événements actuels et à venir" style="-fx-font-style: italic;"/>

                <TableView VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Nom" prefWidth="200"/>
                        <TableColumn text="Date" prefWidth="150"/>
                        <TableColumn text="Lieu" prefWidth="150"/>
                        <TableColumn text="Actions" prefWidth="100"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <VBox style="-fx-background-color: #f5f5f5; -fx-padding: 10px; -fx-border-color: #ddd; -fx-border-width: 1;">
